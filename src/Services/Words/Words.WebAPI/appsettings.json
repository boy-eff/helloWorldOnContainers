{
  "ServiceName": "Words",
  "Serilog": {
    "Using":  [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" }
    ]
  },
  "AllowedHosts": "*",
  "Quartz": {
    "UpdateViewsJob": {
      "Schedule": "0/5 * * * * ?"
    },
    "UpdateDailyWordCollectionJob": {
      "Schedule": "0 0 * * * ?"
    },
    "CheckForGameAnniversaryJob": {
      "Schedule": "0 0 * * * ?"
    },
    "UpdateCachedCollectionsJob": {
      "Schedule": "0 */3 * ? * *"
    }
  },
  "RabbitMQ": {
    "VirtualHost": "/",
    "Username": "guest",
    "Password": "guest",
    "ReceiveEndpoints": {
      "UserCreated": "words_user-created_queue"
    }
  },
  "SignalR": {
    "CollectionIdParameterName": "collectionId",
    "AnswerOptionsCount": 4
  },
  "Redis": {
    "CachedCollectionsCount": 10,
    "SlidingExpirationTimeInMinutes": 30
  },
  "Cloudinary": {
    "CloudName": "helloworldoncontainers",
    "ApiKey": "617433536164654",
    "ApiSecret": "Jev0G2N7PyY5MacXJE514eNdq0s"
  },
  "Cors": {
    "PolicyName": "AllowAngularLocalhost",
    "Origins": [
      "http://localhost:4200",
      "http://localhost:8001",
      "http://localhost:7001"
    ]
  }

}
